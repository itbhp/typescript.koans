{
  "name": "typescript.koans",
  "version": "1.0.0",
  "description": "learn TypeScript the right way",
  "main": "index.js",
  "scripts": {
    "pretest": "npm install",
    "prestart": "npm install",
    "test": "mocha test/*.test.ts",
    "start": "npm run test:watch && npm run lint",
    "test:watch": "npm test -- --watch",
    "build": "tsc --pretty",
    "build:watch": "tsc --pretty --watch",
    "build:web": "webpack --watch",
    "live": "live-server",
    "web": "npm-run-all --parallel web:ts build:web live",
    "web:ts": "watch 'tsc --pretty --outDir dist/trash > tsc.log' src/",
    "lint": "tslint \"./src/01_intro.ts\" --formatters-dir=\"./node_modules/tslint-stylish\" --format=\"stylish\"   --exclude=\"./test/*.ts\" "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itbhp/typescript.koans.git"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.7",
    "chai": "^3.5.0",
    "mocha": "^3.5.3",
    "ts-node": "^5.0.1",
    "ts-loader": "^1.2.2",
    "ts-node-warnings": "^1.6.0",
    "tslint": "^3.15.1",
    "tslint-stylish": "^2.1.0-beta",
    "typescript": "^2.0.3",
    "imports-loader": "^0.6.5",
    "live-server": "^1.1.0",
    "npm-run-all": "^3.1.1",
    "sinon": "^2.0.0-pre.4",
    "watch": "^1.0.1",
    "webpack": "^1.13.3"
  }
}
